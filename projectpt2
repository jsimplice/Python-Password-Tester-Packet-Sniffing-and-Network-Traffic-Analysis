from scapy.all import sniff
def packet_callback(packet):
    print(packet.summary())

# Sniffs 10 packets and prints a one-line summary for each
sniff(prn=packet_callback, count=10)

# Same as above, but only for TCP packets
sniff(filter="tcp", prn=packet_callback, count=10)

from scapy.all import IP, TCP
def packet_callback(packet):
    if packet.haslayer(IP):
        ip_src = packet[IP].src
        ip_dst = packet[IP].dst
        print(f"IP Packet; {ip_src} -> {ip_dst}")

# Listens for DNS traffic (UDP port 53) and prints a summary of the 10 packets
sniff(filter="udp port 53", prn=lambda p: p.summary(), count=10)

from scapy.all import sniff, wrpcap

# Collects 10 TCP packets and turn it into a pcap file
packets = sniff(filter="tcp", count=10)
wrpcap("capture.pcap", packets)

from scapy.all import sniff, wrpcap, IP, TCP

def log_ip(packet):
    # If a packet has an IP layer, print its source and destination
    if packet.haslayer(IP):
        if packet.haslayer(IP):
            print(f"IP Packet: {packet[IP].src} -> {packet[IP].dst}")

def capture_and_save(filter_str, count, filename):

    # Capture packets with a g iven filter, log IPs, and saves IPs
    print(f"[*] Capturing {count} packets with filter: {filter_str}")
    packets = sniff(filter=filter_str, prn=log_ip, count=count)
    wrpcap(save_path, packets) # attempts to save packet, save_path is undefined here
    print(f"[+] Saved {count} packets to {filename}")

if __name__ == "__main__":
    # When run, it will capture 20 TCP packets and save
    capture_and_save("tcp", 20, "tcp_capture.pcap")

    # Captures 20 DNS packets (UDP port 53) and saves
    capture_and_save("udp port 53", 20, "dns_capture.pcap")
